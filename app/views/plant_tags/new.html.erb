<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for [@plant,@plant_tag] do |f| %>
      <%= f.association :tag, collection: Tag.all, input_html: { multiple: true, class: 'select2'}, include_hidden: false  %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
